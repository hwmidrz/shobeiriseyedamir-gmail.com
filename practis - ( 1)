
 y = int(input(' mablag fish hogog ra vared konid'))
 
 if y<=1000 :
  print("bedone kasr maliat :daryafti = ", y )
  
 elif 1000<y<=2500:
  print("ba kasr 10 darsad maliat : daryati " ,( (y*90)/100 )) 
  
  elif 2500<y<=4000:
    print("ba kasr 15 darsad maliat : daryati " ,( (y*85)/100 ))
    
  elif 4000<y<=6000:
    print("ba kasr 20 darsad maliat : daryati " ,( (y*80)/100 ))
    
  elif y>800:
    print("ba kasr 30 darsad maliat : daryati " ,( (y*70)/100 ))
